<style>
  @import url('https://fonts.googleapis.com/css2?family=Yomogi&display=swap');

  body {
    font-family: 'Yomogi', cursive;
  }
</style>

<header style="width: 100%;
               height: 80px;
               background-image: url(<%= asset_path('1.jpg') %>);"
               class="px-5">

  <div class="row justify-content-between align-items-end">
    <%= form_with url: "/babies/#{@baby.id}/back_day" do |f| %>
      <input type="hidden" name="date" value="<%= params[:date] %>">
      <%= f.submit "＜", class:"btn btn-secondary btn-sm mb-3"%>
    <% end %>

    <h3 class="mx-auto pb-1" style="margin: 0; color: #4682b4; text-align: center;">
      <%= @baby.nickname %>ちゃん<br>
      <%= params[:date] %>
    </h3>

    <% unless @is_hidden %>
      <%= form_with url: "/babies/#{@baby.id}/next_day" do |f| %>
        <input type="hidden" name="date" value="<%= params[:date] %>">
        <%= f.submit "＞", class:"btn btn-secondary btn-sm mb-3"%>
      <% end %>
    <% end %>
  </div>
</header>

<main class="row flex-grow-1">
  <!--160px=headerとfooterの高さの合計-->
  <div class="col-3" style="background-color: pink; min-height: calc(100vh - 160px);"></div>
    <!--160px=headerとfooterの高さの合計-->
    <div class="col-6" style="background-color: white; position: relative; min-height: calc(100vh - 160px);">
      <% @records.each do |record| %>
        <div>
          <%= record.item_i18n %>
          <%= record.date.strftime('%H:%M') %>
          <%= record.amount %>
          <% if record.item_i18n == "ミルク" || record.item_i18n == "母乳" %>
            <%= record.unit %>
          <% end %>
        </div>
      <% end %>

      <% record = params[:date] %>
      <div class="add-button" style="position: absolute; bottom: 20px; right: 20px;">
        <%= link_to new_record_path(@baby.id, record) do %>
          <button type="button" class="btn btn-secondary btn-outline-light rounded-circle p-0" style="width: 3rem; height: 3rem;">
            <i class="fa fa-plus"></i>
          </button>
        <% end %>
      </div>
    </div>
  <!--160px=headerとfooterの高さの合計-->
  <div class="col-3" style="background-color: pink; min-height: calc(100vh - 160px);"></div>
</main>