 <style>
  @import url('https://fonts.googleapis.com/css2?family=Yomogi&display=swap');

  body {
    font-family: 'Yomogi', cursive;
    margin: 0;
    padding: 0;
  }
</style>

<body>
  <header style="width: 100%; height: 80px; background-image: url('/assets/1.jpg'); display: flex; justify-content: center; align-items: center;">
    <h2 style="margin: 0; color: #4682b4">メニュー</h2>
  </header>

  <div style="background-color: rgba(255, 255, 255, 1); display: flex; align-items: center; justify-content: center; flex-direction: column; min-height: calc(100vh - 160px);">
    <style>
      #add-baby-link {
        background-color: pink;
        height: 45px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 3px solid pink;
        margin-bottom: 10px;
        position: relative;
        border-radius: 50px;
      }

      #add-baby-link p {
        margin: 0;
        color: white;
      }

      #add-baby-link::after {
        content: "＞";
        position: absolute;
        right: 10px;
        color: white;
      }
    </style>

    <style>
      #add-withdraw-link {
        background-color: pink;
        height: 45px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 3px solid pink;
        margin-top: 15px;
        position: relative;
        border-radius: 50px;
      }

      #add-withdraw-link p {
        margin: 0;
        color: white;
      }

      #add-withdraw-link::after {
        content: "＞";
        position: absolute;
        right: 10px;
        color: white;
      }
    </style>

    <div style="display: flex; justify-content: center; align-items: center; height: calc(100vh - 200px); padding: 100px;">
      <table>
        <tr>
          <td style="padding: 20px; text-align: center; width: 500px; height: 300px; margin: 0 auto;">
            <div class="row" id="add-baby-link">
              <p>赤ちゃんの追加・編集</p>
            </div>

            <script>
              $(document).ready(function() {
                $('#add-baby-link').click(function() {
                  window.location.href = "<%= babies_path %>";
                });
              });
            </script>

            <div class="row" id="add-withdraw-link">
              <p>退会</p>
            </div>

            <script>
              $(document).ready(function() {
                $('#add-withdraw-link').click(function() {
                  window.location.href = "<%= out_path %>";
                });
              });
            </script>
          </td>
        </tr>
      </table>
    </div>
  </div>

  <%= render partial: 'babies/footer' %>
</body>