<div class="container">
  <div class="row">
    <div class='mx-auto col-sm-12 col-lg-8 col-xl-6'>
      <div class="mt-5 mb-5 text-center">
       <h1>アカウント共有</h1>
      </div>

      <p class="mt-5 mb-0 text-center">共有用コード</p>
      <div class="btn-wrapper col-10 mx-auto">
        <%= form_with model: @parent do |f| %>
        
        <div class="mt-0 mb-5 text-center">
          <%= f.text_field :share_code, autofocus: true, autocomplete: "share_code", :size=>"48" , placeholder: "共有用コードをを入力して下さい"  %>
	      </div>
        
        <p class="mt-5 mb-0 text-center">メールアドレス</p>
        <div class="mt-0 mb-5 text-center">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :size=>"48" , placeholder: "ご自身のメールアドレスを入力して下さい"%>
	      </div>
      
        <p class="mt-4 mb-0 text-center">パスワード</p>
        <div class="mt-0 mb-5 text-center">
          <%= f.password_field :password, autocomplete: "current-password", :size=>"48" , placeholder: "ご自身のパスワードを入力して下さい" %>
	      </div>
        
        <div class="mt-0 mb-5 text-center">  
          <%= f.submit "送信", class:"btn btn-secondary btn-sm btn-block mb-3" %>
        </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>