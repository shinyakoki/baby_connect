<div class="blogs-edit-main">
  <table class="custom-table2">
      <h2>投稿内容</h2>
      <td class="custom-td4">

        <table class="table" style="max-width: 100%;">
            <thead class="rounded-circle" style="background-color: #ffc0cb;">
              <tr>
                <th style="color: white;">タイトル</th>
                <th style="color: white;">内容</th>
                <th style="color: white;">日時</th>
              </tr>
            </thead>
          <tbody>
            <td>
            <%= @blog.title %>
            </td>

            <td>
            <%= @blog.content %>
            </td>

            <td>
            <%= @blog.start_time.strftime("%m-%d") %>
            </td>
          </tbody>
        </table>

        <br>
        <div class="blogs-show-main">
          <%= link_to edit_blog_path(@blog), class: "btn btn-info text-center px-1 pt-2 rounded-pill",
                                             style: "color: white; width: 120px; white-space: nowrap;" do
          %>
            投稿を編集する
          <% end %>

          <%= link_to blog_path(@blog.id), class: "btn btn-danger text-center px-1 pt-2 rounded-pill",
                                           style: "color: white;
                                                   width: 120px;
                                                   white-space: nowrap;",
                                                   method: :delete, data: { confirm: '本当に削除しますか?' } do
          %>
            投稿を削除する
          <% end %>

          <%= link_to blogs_path, class: "btn btn-secondary text-center px-4 pt-2 rounded-pill",
                                  style: "color: white; width: 120px; white-space: nowrap;" do
          %>
            戻る
          <% end %>
        </div>
      </td>
    </tr>
  </table>
</div>