<header style="width: 100%; height: 80px; border-bottom: 3px solid #f08080;">
  <nav style="display: flex; justify-content: center; align-items: center; height: 100%;">
    <h1 style="margin: 0; text-align: center;">メニュー</h1>
  </nav>
</header>

<% if notice.present? %>
  <p id="notice"><%= notice %></p>
<% end %>

<div class="toppage" style="margin-left: 30px;">

  <div class="row">
    <div class="col-md-4">
      <div class="schedule text-center mt-3">今後の予定一覧</div>
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>タイトル</th>
            <th>日程</th>
          </tr>
        </thead>
        <tbody>
          <% @blogs.each do |blog| %>
            <tr>
              <td><%= link_to blog.title, blog %></td>
              <td><%= "#{blog.start_time.month}月#{blog.start_time.day}日" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= form_with(model: @blog, local: true) do |form| %>
        <div class="title text-center">
          <div class="form-tag text-center">タイトル</div>
          <%= form.text_field :title, :size=>32 %>
        </div>

        <div class="content text-center">
          <div class="form-tag text-center">内容</div>
          <%= form.text_area :content, rows: 3, cols: 31.5 %>
        </div>

        <div class="time text-center">
          <div class="form-tag text-center">時間</div>
          <%= form.datetime_select :start_time %>
        </div>

        <div class="submit mt-3 text-center">
          <%= form.submit %>
        </div>
      <% end %>
    </div>

    <br>

    <br>
    <div class="col-md-8">
      <%= month_calendar events: @blogs do |date, blogs| %>
        <%= date.day %>

        <% blogs.each do |blog| %>
          <div>
            <%= link_to blog.title, blog %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<%= render partial: 'babies/footer' %>