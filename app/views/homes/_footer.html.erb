<footer style="background-color: rgba(255, 255, 255, 0.95); height: 80px; width: 100%;">
  <div class="container-fluid mt-auto">
  <!--text-centerで中央寄せ pt-3=padding topが1rem-->
  <div class="text-center pt-3">
    <!--twitterのtopページurlとアイコン-->
    <%= link_to "https://twitter.com/", class: "text-decoration-none mr-1" do %>
      <!--twitterのアイコン　mutedカラー-->
      <i class="fab fa-twitter-square h2 text-info"></i>
    <% end %>

    <%= link_to "https://www.facebook.com/", class: "text-decoration-none mr-1" do %>
      <!--facebookのアイコン　mutedカラー-->
      <i class="fab fa-facebook h2 text-primary"></i>
    <% end %>

    <%= link_to "https://www.instagram.com/", class: "text-decoration-none mr-1" do %>
      <!--instagramのアイコン　mutedカラー-->
      <i class="fab fa-instagram-square h2 text-muted"></i>
    <% end %>

    <%= link_to "https://line.me/ja/", class: "text-decoration-none" do %>
      <!--lineのアイコン　mutedカラー-->
      <i class="fab fa-line h2 text-success"></i>
    <% end %>
  </div>
  <!--text-centerで中央寄せ　mutedカラー-->
  <p class="text-center text-muted">©Copyright 2023 BabyConnect ALL Rights reserved.</p>
  </div>
</footer>