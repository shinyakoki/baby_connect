<div class="container">
  <div class="row">
    <div class='mx-auto col-sm-12 col-lg-8 col-xl-6'>
      <div class="mt-5 mb-3 text-center">
       <h1>ユーザー登録</h1>
      </div>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name),method: :post) do |f| %>
          <p class="mt-0 mb-0 text-center">メールアドレス</p>
          <div class="mt-0 mb-5 text-center">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" , :size=>"48" , placeholder: "ご自身のメールアドレスを入力して下さい" %>
          </div>

          <p class="mt-0 mb-0 text-center">パスワード</p>
          <div class="mt-0 mb-5 text-center">
            <%= f.password_field :password, autocomplete: "current-password" , :size=>"48" , placeholder: "ご自身のパスワードを入力して下さい"%>
          </div>

          <div class="mt-0 mb-5 text-center">
            <%= f.submit "登録する", class:"btn btn-secondary btn-sm btn-block mb-3"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

