<style>
  @import url('https://fonts.googleapis.com/css2?family=Yomogi&display=swap');

  body {
    font-family: 'Yomogi', cursive
  }
</style>

<!--120px=footerの高さ-->
<div style="background-image: url(<%= asset_path('1.jpg') %>);
            background-size: cover;
            display: flex;
            justify-content: center;
            flex-direction: column;
            min-height: calc(100vh - 120px);">

  <div class="container">
    <div class="row">
      <div class='mx-auto col-lg-8 col-md-8 col-6'>
        <div class="mt-5 mb-5 text-center">
          <h1 style="color: white;">Login</h1>
        </div>

        <div class="btn-wrapper col-10 mx-auto">
          <%= form_with(model: resource, local: true, url: session_path(resource_name), method: :post) do |f| %>
            <% flash.each do |name, msg| %>
              <div class="alert alert-danger rounded-pill" role="alert">
                <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
              </div>
            <% end %>

            <p class="mt-4 mb-0 text-center" style="color: black;">メールアドレス</p>
            <div class="mt-0 mb-5 text-center">
              <%= f.email_field :email,
                                 autofocus: true,
                                 required: true,
                                 autocomplete: "email",
                                 size: "48",
                                 placeholder: "ご自身のメールアドレスを入力して下さい",
                                 class: "rounded-pill",
                                 style: "border-color: white;"
              %>
            </div>

            <p class="mt-4 mb-0 text-center" style="color: black;">パスワード</p>
            <div class="mt-0 mb-5 text-center">
              <%= f.password_field :password,
                                    required: true,
                                    autocomplete: "current-password",
                                    :size=>"48",
                                    placeholder: "ご自身のパスワードを入力して下さい",
                                    class: "rounded-pill",
                                    style: "border-color: white;"
              %>
            </div>

            <div class="mt-0 mb-5 text-center">
              <%= f.submit "送信", class: "btn btn-primary rounded-pill btn-sm btn-block mb-3",
                                   style: "width: 380px;
                                   display: inline-block;
                                   color: white;"
              %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>