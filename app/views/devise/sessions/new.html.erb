<div style="background-image: url('/assets/1.jpg'); background-size: cover; display: flex; align-items: center; justify-content: center; flex-direction: column; min-height: calc(100vh - 80px);">
  <div class="container">
    <div class="row">
      <div class='mx-auto col-sm-12 col-lg-8 col-xl-6'>
        <div class="mt-5 mb-5 text-center">
         <h1 style="color: white; font-family: 'Noto Serif JP', serif;">Log in</h1>
        </div>

        <p class="mt-4 mb-0 text-center" style="color: white;">メールアドレス</p>
        <div class="btn-wrapper col-10 mx-auto">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="mt-0 mb-5 text-center">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "48", placeholder: "ご自身のメールアドレスを入力して下さい", class: "rounded-pill", style: "border-color: white;" %>
          </div>

          <p class="mt-4 mb-0 text-center" style="color: white;">パスワード</p>
          <div class="mt-0 mb-5 text-center">
            <%= f.password_field :password, autocomplete: "current-password" , :size=>"48" , placeholder: "ご自身のパスワードを入力して下さい", class: "rounded-pill", style: "border-color: white;" %>
          </div>

          <div class="mt-0 mb-5 text-center">
            <%= f.submit "送信", class:"btn btn btn-outline-info rounded-pill btn-sm btn-block mb-3", style:"width: 415px; display: inline-block; color: white; border-color: white;" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render partial: 'homes/footer' %>