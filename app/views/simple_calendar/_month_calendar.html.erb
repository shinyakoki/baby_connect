<div class="simple-calendar" style="transform: scale(0.95); margin: 20px auto;">
  <div class="calendar-heading">
    <%= link_to t('simple_calendar.previous', default: 'Previous'), calendar.url_for_previous_view %>
    <span class="calendar-title"> <%= start_date.year %>å¹´ <%= t('date.month_names')[start_date.month] %></span>
    <%= link_to t('simple_calendar.next', default: 'Next'), calendar.url_for_next_view %>
  </div>

  <table class="table table-striped" style="width: 100%;">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <% if day.wday == 6 %>
            <th class="saturday"><%= t('date.abbr_day_names')[day.wday] %></th>
          <% elsif day.wday == 0 %>
            <th class="sunday"><%= t('date.abbr_day_names')[day.wday] %></th>
          <% else %>
            <th clas="weekday"><%= t('date.abbr_day_names')[day.wday] %></th>
          <% end %>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day) do %>
              <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(passed_block) %>
                <% capture_haml(day, sorted_events.fetch(day, []), &passed_block) %>
              <% else %>
                <% passed_block.call day, sorted_events.fetch(day, []) %>
              <% end %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>